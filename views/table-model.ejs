<table class="table table-striped table-advance table-hover">
<tbody>
<tr>
    <th>食物名称</th>
    <th>单价</th>
    <th>销售量</th>
    <th>喜欢</th>
    <th>不喜欢</th>
    <th>操作</th>
</tr>
<%itemArr.forEach(function(item){%>
<tr>
    <td><%=item.foodname%></td>
    <td><%=item.price%></td>
    <td><%=item.sales%></td>
    <td><%=item.heartnum%></td>
    <td><%=item.badnum%></td>
    <td>
        <div class="btn-group">
            <a class="btn btn-primary" href="food-update?fid=<%=item.fid%>"><i class="icon_plus_alt2"></i></a>
            <a class="btn btn-danger" id="<%=item.fid%>"><i class="icon_close_alt2"></i></a>
        </div>
    </td>
</tr>
<%})%>
</tbody>
</table>
<!--分页开始-->
<div class="col-lg-12">
    <section class="panel">
        <div class="text-center">
            <ul class="pagination" id="<%=cid%>" search-name="<%=foodname%>">
                <%if(page==1){%>
                <li><a>«</a></li>
                <%}else{%>
                <li><a class="page-btn" page="<%=page-1%>">«</a></li>
                <%}%>
                <%
                var totalshow=5;//显示多少页
                var start=page -(totalshow-1)/2;
                if(start<1){
                    start=1;
                }
                var end=start+totalshow-1;
                if(end>pagenum){
                    end=pagenum;
                    start=pagenum-totalshow+1;
                    if(start<1){
                        start=1;
                    }
                }
                %>
                <%for(var i=start;i<=end;i++){%>
                <%if(i==page){%>
                <li class="active page-btn"><a><%=i%></a></li>
                <%}else{%>
                <li><a class="page-btn" page="<%=i%>"><%=i%></a></li>
                <%}%>
                <%}%>
                <%if(page==pagenum){%>
                <li><a>»</a></li>
                <%}else{%>
                <li><a class="page-btn" page="<%=parseInt(page)+1%>">»</a></li>
                <%}%>
            </ul>
        </div>
    </section>
</div>
<!--分页结束-->
<script src="js/ours/food-delete.js"></script>
<script src="js/ours/food-search.js"></script>