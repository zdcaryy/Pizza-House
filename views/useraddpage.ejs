<%include common-head.ejs%>

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> 用户管理</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                        <li><i class="fa fa-bars"></i>用户管理</li>
                        <li><i class="fa fa-square-o"></i>添加用户</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->
            <!--添加新用户-->
            <div class="row" id="add-user">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            添加用户
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="form-validate form-horizontal" id="feedback_form" method="post" >
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">用户名 <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="cname" name="username" minlength="5" type="text" required value="张明明" v-on:blur='usernameisNull'v-model="username"/>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cemail" class="control-label col-lg-2">密码 <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control " id="cpasswd" type="text" name="passwd" required value="123" v-on:blur='passwdisNull'v-model="passwd"/>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">手机号 <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="tel"  name="tel" v-on:blur='telisNull'v-model="tel" minlength="5" type="text" required/>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">居住地 <span class="required">*</span></label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="subject" name="address" minlength="5" type="text" required value="成都市" v-on:blur='addressisNull'v-model="address"/>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="cname" class="control-label col-lg-2">性别 </label>
                                        <div class="col-lg-10">
                                            <div class="form-group">
                                                <div class="col-lg-12">
                                                    <div class="radio">
                                                        <label>
                                                            <input type="radio" name="sex" id="optionsRadios1" value="1" checked v-model="sex">
                                                            男
                                                        </label>
                                                    </div>
                                                    <div class="radio">
                                                        <label>
                                                            <input type="radio" name="sex" id="optionsRadios2" value="2" v-model="sex">
                                                            女
                                                        </label>
                                                    </div>
                                                    <div class="radio">
                                                        <label>
                                                            <input type="radio" name="sex" id="optionsRadios1" value="3" checked v-model="sex">
                                                            保密
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-primary" type="button" v-on:click="adduser" id="adduser-btn">Save</button>
                                            <button class="btn btn-default" type="button">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->

    <%include common-foot.ejs%>
<script src="js/ours/user-add.js"></script>