<%include common-head.ejs%>

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> 食物信息</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                        <li><i class="fa fa-bars"></i>食物信息</li>
                        <li><i class="fa fa-square-o"></i>类别管理</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->
            <div id="add-user" class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            食类管理
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form id="feedback_form" method="get" class="form-validate form-horizontal" action="/food-cate">

                                    <div class="form-group ">
                                        <label for="cate" class="control-label col-lg-2">添加食品类别</label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="cateadd" name="catename"  type="text" />
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="cate" class="control-label col-lg-2">修改食品类别 </label>
                                        <div class="col-lg-10">
                                            <input class="form-control" id="cateupdate" name="newcatename"  type="text" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-primary" type="submit">保存</button>

                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <!--食品类别展示开始-->
            <section class="panel">
                <header class="panel-heading">
                    食类表
                </header>

                <table class="table table-striped table-advance table-hover">
                    <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> 食品类别id</th>
                        <th><i class="icon_calendar"></i> 类别名称</th>
                        <th><i class="icon_mail_alt"></i> 子类数量</th>
                        <th><i class="icon_cogs"></i>操作</th>
                    </tr>
                    <%cateArr.forEach(function(cate){%>
                    <tr>
                        <td><%=cate.cid%></td>
                        <td><%=cate.catename%></td>
                        <td><%=cate.childnum%></td>
                        <td>
                            <div class="btn-group">
                                <a id="<%=cate.cid%>" class="btn btn-primary"><i class="icon_plus_alt2"></i></a>

                                <a id="<%=cate.cid%>" class="btn btn-danger"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                    <%})%>
                    </tbody>
                </table>
            </section>
            <!--食品类别展示结束-->
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->

<%include common-foot.ejs%>
<script src="js/ours/food-cate.js"></script>